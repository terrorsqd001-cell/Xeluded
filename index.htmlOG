    <script>
        // Tool Search Functionality
        const toolSearch = document.getElementById('toolSearch');
        const toolsGrid = document.getElementById('toolsGrid');
        const searchResults = document.getElementById('searchResults');
        const clearSearchBtn = document.getElementById('clearSearch');
        const originalTools = Array.from(toolsGrid.children);

        function filterTools() {
            const searchQuery = toolSearch.value.toLowerCase().trim();
            
            // Show/hide clear button
            if (searchQuery) {
                clearSearchBtn.style.display = 'block';
            } else {
                clearSearchBtn.style.display = 'none';
            }

            if (!searchQuery) {
                // Show all tools
                originalTools.forEach(tool => {
                    tool.style.display = '';
                });
                searchResults.classList.add('hidden');
                return;
            }

            // Filter tools
            let visibleCount = 0;
            originalTools.forEach(tool => {
                const toolText = tool.textContent.toLowerCase();
                const toolTitle = tool.querySelector('h3')?.textContent.toLowerCase() || '';
                const toolDesc = tool.querySelector('p')?.textContent.toLowerCase() || '';
                
                if (toolText.includes(searchQuery) || toolTitle.includes(searchQuery) || toolDesc.includes(searchQuery)) {
                    tool.style.display = '';
                    visibleCount++;
                } else {
                    tool.style.display = 'none';
                }
            });

            // Show search results count
            if (visibleCount === 0) {
                searchResults.textContent = `‚ö†Ô∏è No tools found matching "${searchQuery}"`;
                searchResults.classList.remove('hidden');
            } else {
                searchResults.textContent = `Found ${visibleCount} tool${visibleCount !== 1 ? 's' : ''} matching "${searchQuery}"`;
                searchResults.classList.remove('hidden');
            }
        }

        function clearSearch() {
            toolSearch.value = '';
            clearSearchBtn.style.display = 'none';
            filterTools();
            toolSearch.focus();
        }

        // Add event listeners
        toolSearch.addEventListener('input', filterTools);
        toolSearch.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                clearSearch();
            }
        });

        // Modal Logic
        function openModal() { document.getElementById('creatorModal').classList.add('active'); }
        function closeModal() { document.getElementById('creatorModal').classList.remove('active'); }
        document.getElementById('creatorModal').addEventListener('click', function(e) { if (e.target === this) closeModal(); });
        document.addEventListener('keydown', function(e) { if (e.key === 'Escape') closeModal(); });

        // Cinematic Manifesto Logic
        const manifestoLines = [
            { text: "THIS MESSAGE IS DELIBERATE.", type: "title" },
            { text: "ITS PURPOSE IS CLARITY.", type: "title" },
            { text: "", type: "spacer" },
            { text: "WE DO NOT OPPOSE THE PUBLIC.", type: "normal" },
            { text: "WE DO NOT TARGET CIVILIANS.", type: "normal" },
            { text: "WE DO NOT PROFIT FROM DISRUPTION.", type: "normal" },
            { text: "", type: "spacer" },
            { text: "OUR ACTIONS ARE DIRECTED SOLELY AT", type: "normal" },
            { text: "PUBLIC OFFICIALS AND AUTHORITIES", type: "highlight" },
            { text: "WHO ABUSED LEGITIMATE POWER", type: "normal" },
            { text: "TO COMMIT THEFT IN PLAIN SIGHT.", type: "normal" },
            { text: "", type: "spacer" },
            { text: "THIS IS WHAT WE MEAN BY", type: "normal" },
            { text: "‚ÄúROBBERY IN THE LIGHT‚Äù:", type: "highlight" },
            { text: "", type: "spacer" },
            { text: "‚Äî FUNDS TAKEN UNDER LEGAL AUTHORITY", type: "normal" },
            { text: "‚Äî DECISIONS SIGNED, STAMPED, AND APPROVED", type: "normal" },
            { text: "‚Äî RESOURCES DIVERTED FROM THOSE WITH NO MEANS TO RESIST", type: "normal" },
            { text: "‚Äî CORRUPTION DISGUISED AS PROCEDURE", type: "normal" },
            { text: "", type: "spacer" },
            { text: "THESE ACTS WERE NOT ACCIDENTAL.", type: "normal" },
            { text: "THEY WERE SYSTEMATIC.", type: "normal" },
            { text: "THEY WERE DOCUMENTED.", type: "normal" },
            { text: "AND THEY WERE PROTECTED BY POSITION.", type: "highlight" },
            { text: "", type: "spacer" },
            { text: "WHEN POWER IS USED AS SHIELD,", type: "normal" },
            { text: "AND LAW IS USED AS COVER,", type: "normal" },
            { text: "SILENCE ENABLES THE CRIME.", type: "highlight" },
            { text: "", type: "spacer" },
            { text: "WE SEEK NO CHAOS.", type: "normal" },
            { text: "WE SEEK NO HARM.", type: "normal" },
            { text: "WE SEEK NO REVENGE.", type: "normal" },
            { text: "", type: "spacer" },
            { text: "OUR OBJECTIVE IS ACCOUNTABILITY.", type: "normal" },
            { text: "OUR METHOD IS EXPOSURE.", type: "normal" },
            { text: "OUR LIMIT IS THE INNOCENT.", type: "highlight" },
            { text: "", type: "spacer" },
            { text: "EVERY ACTION IS CALCULATED.", type: "normal" },
            { text: "EVERY TARGET IS JUSTIFIED.", type: "normal" },
            { text: "EVERY STEP IS TAKEN WITH THE INTENT TO REVEAL,", type: "normal" },
            { text: "NOT TO DESTROY.", type: "highlight" },
            { text: "", type: "spacer" },
            { text: "THIS IS NOT AN ATTACK ON ORDER.", type: "normal" },
            { text: "THIS IS A RESPONSE TO ITS FAILURE.", type: "highlight" },
            { text: "", type: "spacer" },
            { text: "THE LIGHT WAS USED TO STEAL.", type: "normal" },
            { text: "THE LIGHT WILL NOW BE USED TO SHOW.", type: "highlight" },
            { text: "", type: "spacer" },
            { text: "CATCH US IF YOU CAN.", type: "title" }
        ];

        let animationRunning = false;

        async function triggerCinematic() {
            if (animationRunning) return;
            animationRunning = true;
            
            const overlay = document.getElementById('cinematic-overlay');
            const content = document.getElementById('cinematic-content');
            
            overlay.style.display = 'flex';
            content.innerHTML = ''; // Clear previous content

            // Scroll to top
            window.scrollTo(0, 0);

            // Play sequence
            for (let i = 0; i < manifestoLines.length; i++) {
                if (overlay.style.display === 'none') break; // Stop if closed

                const lineData = manifestoLines[i];
                const lineEl = document.createElement('div');
                
                if (lineData.type === 'spacer') {
                    lineEl.style.height = '1.5rem';
                } else {
                    lineEl.textContent = lineData.text;
                    lineEl.classList.add('cinema-line');
                    
                    if (lineData.type === 'title') {
                        lineEl.classList.add('cinema-title');
                        lineEl.classList.add('glitch');
                    }
                    if (lineData.type === 'highlight') lineEl.classList.add('cinema-highlight');
                    
                    content.appendChild(lineEl);
                    
                    // Trigger reflow
                    void lineEl.offsetWidth;
                    
                    // Add visible class for CSS transition
                    setTimeout(() => {
                        lineEl.classList.add('visible');
                    }, 50);
                }

                if(lineData.type !== 'spacer') content.appendChild(lineEl);
                
                // Auto scroll to bottom
                content.scrollTop = content.scrollHeight;
                
                // Delay between lines (randomized slightly for realism)
                const delay = lineData.type === 'spacer' ? 200 : (Math.random() * 300 + 400);
                await new Promise(r => setTimeout(r, delay));
            }
            animationRunning = false;
        }

        function closeCinematic() {
            document.getElementById('cinematic-overlay').style.display = 'none';
            animationRunning = false;
        }

        // Premium Code Verification
        function checkPremiumCode() {
            // Clear previous input and error
            document.getElementById('codeInput').value = '';
            document.getElementById('codeError').classList.add('hidden');
            document.getElementById('codeError').textContent = '';
            
            // Show modal
            document.getElementById('codeModal').classList.add('active');
            
            // Focus on input
            setTimeout(() => {
                document.getElementById('codeInput').focus();
            }, 100);
        }

        function closeCodeModal() {
            document.getElementById('codeModal').classList.remove('active');
            document.getElementById('codeInput').value = '';
            document.getElementById('codeError').classList.add('hidden');
        }

        function formatCodeInput(input) {
            // Remove any non-numeric characters
            input.value = input.value.replace(/[^0-9]/g, '');
        }

        function handleCodeKeyPress(event) {
            // Only allow numbers
            if (!/[0-9]/.test(event.key) && event.key !== 'Enter' && event.key !== 'Backspace' && event.key !== 'Delete' && event.key !== 'Tab') {
                event.preventDefault();
                return;
            }
            
            // Auto-submit on Enter
            if (event.key === 'Enter') {
                verifyCode();
            }
        }

        function verifyCode() {
            // Get current time in 12-hour format
            const now = new Date();
            let hours = now.getHours();
            const minutes = now.getMinutes();
            
            // Convert to 12-hour format
            hours = hours % 12;
            if (hours === 0) hours = 12;
            
            // Format: minutes + hours (both 2 digits)
            // Example: 12:59 -> 5912 (59 minutes + 12 hours)
            const code = String(minutes).padStart(2, '0') + String(hours).padStart(2, '0');
            
            // Get user input
            const userCode = document.getElementById('codeInput').value.replace(/\s/g, '');
            const errorDiv = document.getElementById('codeError');
            
            if (!userCode) {
                errorDiv.textContent = '‚ö†Ô∏è Please enter a code';
                errorDiv.classList.remove('hidden');
                return;
            }
            
            if (userCode === code) {
                // Correct code - redirect
                window.location.href = 'https://search-tool-plum.vercel.app/';
            } else {
                // Incorrect code
                errorDiv.textContent = '‚ö†Ô∏è ACCESS DENIED: Invalid code';
                errorDiv.classList.remove('hidden');
                document.getElementById('codeInput').value = '';
                document.getElementById('codeInput').focus();
            }
        }

        // Close code modal on outside click
        document.getElementById('codeModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeCodeModal();
            }
        });

        // Close code modal on Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && document.getElementById('codeModal').classList.contains('active')) {
                closeCodeModal();
            }
        });
    </script>
